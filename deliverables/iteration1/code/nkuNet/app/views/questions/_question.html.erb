<div class="question">
    <br/>
    <h2 class="header"><%= link_to question.title, question %></h2>
    <p><i><%=friendly_date question.created_at %></i></p>
    <p><%=question.body %></p>
    <p class="menu">
        <%= link_to "Edit", edit_question_path(question) %>
        <%= link_to "Destroy", question, method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
</div>