<div class="question">
<br/>
<p id="notice" class="header"><%= notice %></p>

<h2><%= @question.title %></h2>

<p><%= @question.body %></p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

<h3>Answers</h3>
<%= render @question.answers %>

<h4>New Answer</h4>
<%= form_for [@question, @question.answers.build] do |f| %>
  <div class='field'>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class='field'>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class='action'>
    <%= f.submit %>
  </div>
<% end %>
</div>